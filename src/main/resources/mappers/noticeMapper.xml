<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bookdabang.mapper.NoticeMapper">
	<select id="getEntireNotice" resultType="Notice">
		select * from notice
		order by no desc
	</select>
	<select id="readNotice" resultType="Notice">
		select * from notice where no
		= #{no}
	</select>
	<select id="getMaxNo" resultType="int">
		select max(no) from notice
	</select>
	<insert id="insertNotice">
		insert into notice(no, title, writer, content, image)
		values(#{no},#{title},#{writer},#{content},#{image})
	</insert>
	<insert id="insertAttachFile">
		insert into attachfile(noticeNo, originFile,
		thumbnailFile, notImageFile)
		values(#{noticeNo}, #{originFâ€Žile},
		#{thumbnailFile}, #{notImageFile})
	</insert>
	<select id="getAttachFile" resultType="AttachFileVO">
		select * from attachfile
		where noticeNo=#{noticeNo}
	</select>
	<delete id="deleteNotice">
		delete from notice where no=#{no}
	</delete>
	<insert id="insertReply">
		insert into
		notice_reply(boardNo,replyer,replyContent)
		values(#{boardNo},#{replyer},#{replyContent})
	</insert>
	<select id="getReplyNotice" resultType="NoticeReply">
		select * from notice_reply where boardNo = #{boardNo}
	</select>
</mapper>